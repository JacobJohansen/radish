<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Rbmk.Radish.Views.ResultViewer.Projections.Some.ErrorResultNodeControl"
    Padding="0,2">
    
    <StackPanel Orientation="Horizontal" Spacing="4">
        
        <Image
            VerticalAlignment="Center"
            Classes="Icon"
            Source="resm:Rbmk.Radish.Views.Icons.X32.Error.png" />
        
        <TextBlock
            VerticalAlignment="Center"
            Text="{Binding FormattedOrdinal}" />
        
        <TextBlock
            VerticalAlignment="Center"
            Text="{Binding Error}" />
        
    </StackPanel>
    
</UserControl>