<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Rbmk.Radish.Views.ExplorerPad.ConnectionExplorer.Nodes.NewConnectionNodeControl"
    Padding="0,2"
    Tapped="OnTapped">
    
    <Grid
        RowDefinitions="auto"
        ColumnDefinitions="auto,4,*">
        
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Classes="Icon"
            Source="resm:Rbmk.Radish.Views.Icons.X32.Add.png" />
        
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Center"
            Text="Connect ..." />
        
    </Grid>
    
</UserControl>