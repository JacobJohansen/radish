<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Rbmk.Radish.Views.StructViewer.Projections.ZSets.ZSetStructItemControl">
    
    <Grid
        ColumnDefinitions="24,150,*"
        RowDefinitions="24">
        
        <Border
            IsVisible="{Binding !IsEnabled}"
            Grid.ColumnSpan="3"
            Classes="GridDisabled" />
        
        <Border
            Grid.Column="0"
            Classes="GridCell">
            <CheckBox
                Classes="Checker"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                IsThreeState="False"
                IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                IsChecked="{Binding IsChecked, Mode=TwoWay}" />
        </Border>
        
        <Border 
            Grid.Column="1"
            Classes="GridCell">
            <TextBox
                Name="ScoreInput"
                Text="{Binding Score, Mode=TwoWay}" />
        </Border>
        
        <Border 
            Grid.Column="2"
            Classes="GridCell">
            <TextBox
                Name="ValueInput"
                Text="{Binding Value, Mode=TwoWay}" />
        </Border>
        
    </Grid>
    
</UserControl>